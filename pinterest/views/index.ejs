<%- include('./partials/header.ejs') %>
  <div class="container">
    <div class="content">
      <!--pinterest logo-->
      <img src="https://i.pinimg.com/originals/d3/d1/75/d3d175e560ae133f1ed5cd4ec173751a.png" alt="pin logo"
        class="img1" />
      <p class="header">Create account to see more</p>
      <form action="/register" method="post">
        <input type="email" placeholder="Email" name="email" class="detail" /><br />
        <input type="text" placeholder="Username" name="username" class="detail" /><br />
        <input type="text" placeholder="Full Name" name="fullname" class="detail" spellcheck="false" /><br />
        <input type="password" placeholder="Password" name="password" class="detail" />
        <input type="submit" class="btn int" value="Register">
      </form>

      <a href="/forgot">Forgot your password?</a>

      <p class="or">OR</p>
      <button class="btn fbk">
        <i class="fab fa-facebook fa-lg" style="color: white; padding-right: 10px"></i><a href="#">Continue with
          Facebook</a></button><br />
      <button class="btn ggl">
        <i class="fab fa-google" style="color: rgb(11, 241, 22); padding-right: 10px"></i><a href="#">Continue with
          Google</a>
      </button>

      <footer>
        <p>
          By continuing, you agree to Pinterest's
          <b>Terms of Service, Privacy policy.</b>
        </p>
        <hr />
        <a href="/login">Already on Pinterest? Login</a>
      </footer>
    </div>
  </div>
  <%- include('./partials/footer.ejs') %>